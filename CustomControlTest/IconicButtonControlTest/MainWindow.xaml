<Window
    x:Class="IconicButtonControlTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconicButtonControl="clr-namespace:IconicButtonControl;assembly=IconicButtonControl"
    xmlns:local="clr-namespace:IconicButtonControlTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Orientation="Horizontal">
        <iconicButtonControl:IconicButton ActionType="Edit" />
        <iconicButtonControl:IconicButton ActionType="Add" />
        <iconicButtonControl:IconicButton ActionType="Delete" />
        <iconicButtonControl:IconicButton ActionType="ShowDescription" />
    </StackPanel>
</Window>
