<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:advanceddatagrid="clr-namespace:AdvancedDataGridControl;assembly=AdvancedDataGridControl">

    <Style x:Key="AdvancedDataGridStyle" TargetType="{x:Type advanceddatagrid:AdvancedDataGrid}">
        <Setter Property="AutoGenerateColumns" Value="False" />
        <Setter Property="Margin" Value="0,0,-2,0" />
        <Setter Property="BorderBrush" Value="#D6E0E5" />
        <Setter Property="BorderThickness" Value="1,1,0,0" />
        <Setter Property="CanUserAddRows" Value="False" />
        <Setter Property="HeadersVisibility" Value="Column" />
        <Setter Property="HorizontalGridLinesBrush" Value="#D6E0E5" />
        <Setter Property="VerticalGridLinesBrush" Value="#D6E0E5" />
        <Setter Property="CellStyle" Value="{StaticResource CellStyle}" />
        <Setter Property="RowHeight" Value="35" />
        <Setter Property="ColumnHeaderHeight" Value="35" />
        <Setter Property="IsReadOnly" Value="True" />
    </Style>

</ResourceDictionary>